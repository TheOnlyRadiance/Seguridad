@model SEGURIDAD.DTOS.Auth.RegistroDTO

@{
    ViewBag.Title = "Registro de Usuarios";
    ViewData["OcultarMenu"] = true;
}

<h2>Crear cuenta</h2>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}

<form asp-action="Register" method="post">
    @Html.AntiForgeryToken()

    <div class="form-group mb-3">
        <label>Correo</label>
        <input asp-for="Correo" class="form-control" />
        <span asp-validation-for="Correo" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label>Contraseña</label>
        <input asp-for="Contrasena" type="password" class="form-control" />
        <span asp-validation-for="Contrasena" class="text-danger"></span>
    </div>

    <button class="btn btn-primary">Registrarse</button>

    <div>
    <a href="/Auth/Login" class="btn btn-link">¿Ya tienes cuenta? Inicia sesión</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}