@{
    ViewData["Title"] = "Desencriptar";
}

<!DOCTYPE html>
<html>
<head>
    <title>Desencriptar Texto</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .container {
            max-width: 700px;
            margin-top: 30px;
        }

        .card-header {
            background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
        }

        .result-box {
            background-color: #f8f9fa;
            border-left: 4px solid #11998e;
        }

        .btn-decrypt {
            background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
            border: none;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="card shadow">
            <div class="card-header text-white">
                <h3 class="text-center mb-0">DESENCRIPTAR TEXTO</h3>
            </div>
            <div class="card-body p-4">
                <!-- Texto Encriptado -->
                <div class="mb-4">
                    <label class="form-label fw-bold">Texto Encriptado:</label>
                    <textarea id="inputText" class="form-control" rows="5"
                              placeholder="Pega aquí el texto encriptado que quieres desencriptar..."></textarea>
                    <div class="form-text">Asegúrate de que el texto esté correctamente encriptado.</div>
                </div>

                <!-- Botón Desencriptar -->
                <div class="text-center mb-4">
                    <button type="button" class="btn btn-decrypt text-white btn-lg px-5" onclick="decryptText()">
                         DESENCRIPTAR TEXTO
                    </button>
                </div>

                <!-- Resultado Desencriptado -->
                <div id="decryptResult" class="d-none">
                    <label class="form-label fw-bold">Texto Original:</label>
                    <div class="result-box p-3">
                        <pre id="decryptedText" class="mb-2 fs-6"></pre>
                        <div class="mt-3">
                            <button type="button" class="btn btn-outline-success btn-sm" onclick="copyToClipboard('decryptedText')">
                                 Copiar Texto Original
                            </button>
                            <button type="button" class="btn btn-outline-secondary btn-sm" onclick="clearAll()">
                                 Limpiar Todo
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Mensaje de error -->
                <div id="errorMessage" class="alert alert-danger d-none mt-3"></div>
            </div>
        </div>
    </div>

    <script>
        async function decryptText() {
            const inputText = document.getElementById('inputText').value.trim();

            if (!inputText) {
                showError('❌ Por favor ingresa un texto encriptado');
                return;
            }

            // Limpiar saltos de línea o espacios
            const cleanText = inputText.replace(/[\n\s]/g, '');

            try {
                const response = await fetch(`/Crypto/Descifrar?cipher=${encodeURIComponent(cleanText)}`);

                if (!response.ok) {
                    showError("❌ El texto no es válido o no se puede desencriptar");
                    return;
                }

                const data = await response.json();

                // Mostrar el texto desencriptado
                document.getElementById('decryptedText').textContent = data.textoPlano;
                document.getElementById('decryptResult').classList.remove('d-none');
                hideError();

                document.getElementById('decryptResult').scrollIntoView({ behavior: 'smooth' });

            } catch (error) {
                showError("❌ Error inesperado: " + error);
            }
        }

        function copyToClipboard(elementId) {
            const text = document.getElementById(elementId).textContent;
            navigator.clipboard.writeText(text).then(() => {
                alert('✅ Texto desencriptado copiado al portapapeles');
            });
        }

        function clearAll() {
            document.getElementById('inputText').value = '';
            document.getElementById('decryptResult').classList.add('d-none');
            hideError();
        }

        function showError(message) {
            const errorDiv = document.getElementById('errorMessage');
            errorDiv.textContent = message;
            errorDiv.classList.remove('d-none');
        }

        function hideError() {
            document.getElementById('errorMessage').classList.add('d-none');
        }
    </script>
</body>
</html>