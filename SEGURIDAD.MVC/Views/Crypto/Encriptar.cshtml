@{
    ViewData["Title"] = "Encriptar";

}
<!DOCTYPE html>
<html>
<head>
    <title>Encriptar Texto</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .container {
            max-width: 700px;
            margin-top: 30px;
        }

        .card-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }

        .result-box {
            background-color: #f8f9fa;
            border-left: 4px solid #667eea;
        }

        .btn-encrypt {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="card shadow">
            <div class="card-header text-white">
                <h3 class="text-center mb-0">ENCRIPTAR TEXTO</h3>
            </div>
            <div class="card-body p-4">
                <!-- Texto Original -->
                <div class="mb-4">
                    <label class="form-label fw-bold">Texto a Encriptar:</label>
                    <textarea id="inputText" class="form-control" rows="5"
                              placeholder="Escribe aquí el texto que quieres encriptar..."></textarea>
                    <div class="form-text">Tu texto será convertido a formato encriptado seguro.</div>
                </div>

                <!-- Botón Encriptar -->
                <div class="text-center mb-4">
                    <button type="button" class="btn btn-encrypt text-white btn-lg px-5" onclick="encryptText()">
                         ENCRIPTAR TEXTO
                    </button>
                </div>

                <!-- Resultado Encriptado -->
                <div id="encryptResult" class="d-none">
                    <label class="form-label fw-bold">Texto Encriptado:</label>
                    <div class="result-box p-3">
                        <pre id="encryptedText" class="mb-2 fs-6"></pre>
                        <div class="mt-3">
                            <button type="button" class="btn btn-outline-primary btn-sm" onclick="copyToClipboard('encryptedText')">
                                 Copiar Texto Encriptado
                            </button>
                            <button type="button" class="btn btn-outline-secondary btn-sm" onclick="clearAll()">
                                 Limpiar Todo
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Mensaje de error -->
                <div id="errorMessage" class="alert alert-danger d-none mt-3"></div>
            </div>
        </div>
    </div>

    <script>
        function formatEncryptedText(text) {
            return text.match(/.{1,60}/g)?.join('\n') ?? text;
        }

        async function encryptText() {
            const inputText = document.getElementById('inputText').value.trim();

            if (!inputText) {
                showError('❌ Por favor ingresa un texto para encriptar');
                return;
            }

            try {
                const response = await fetch(`/Crypto/Cifrar?texto=${encodeURIComponent(inputText)}`);

                if (!response.ok) {
                    showError("❌ Error al comunicarse con el servidor");
                    return;
                }

                const data = await response.json();

                document.getElementById('encryptedText').textContent = formatEncryptedText(data.cifrado);
                document.getElementById('encryptResult').classList.remove('d-none');
                hideError();

                document.getElementById('encryptResult').scrollIntoView({ behavior: 'smooth' });

            } catch (error) {
                showError("❌ Error inesperado: " + error);
            }
        }

        function copyToClipboard(elementId) {
            const text = document.getElementById(elementId).textContent;
            navigator.clipboard.writeText(text.replace(/\n/g, '')).then(() => {
                alert('✅ Texto encriptado copiado al portapapeles');
            });
        }

        function clearAll() {
            document.getElementById('inputText').value = '';
            document.getElementById('encryptResult').classList.add('d-none');
            hideError();
        }

        function showError(message) {
            const errorDiv = document.getElementById('errorMessage');
            errorDiv.textContent = message;
            errorDiv.classList.remove('d-none');
        }

        function hideError() {
            const errorDiv = document.getElementById('errorMessage');
            errorDiv.classList.add('d-none');
        }
    </script>
</body>
</html>