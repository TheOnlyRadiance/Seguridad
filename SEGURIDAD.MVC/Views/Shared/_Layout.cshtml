<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Proyecto Final Seguridad</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <style>
        :root {
            --cyan: #00ffff;
            --dark: #0f0f1e;
            --sidebar-bg: linear-gradient(180deg, #1a1a2e, #16213e);
        }

        body.sb-dark-mode {
            background: var(--dark);
            color: #e0e0e0;
            min-height: 100vh;
        }

        .wrapper {
            display: flex;
            width: 100%;
            min-height: 100vh;
        }

        /* Sidebar FIJO para siempre, sin poder ocultarse */
        #sidebar {
            min-width: 280px;
            max-width: 280px;
            background: var(--sidebar-bg);
            color: #fff;
            position: fixed;
            top: 0;
            left: 0;
            height: 100vh;
            z-index: 999;
            box-shadow: 8px 0 25px rgba(0,0,0,0.7);
            overflow-y: auto;
        }

        .sidebar-header {
            background: rgba(0,255,255,0.15);
            border-bottom: 1px solid rgba(0,255,255,0.3);
            padding: 30px 20px;
            text-align: center;
        }

            .sidebar-header h3 {
                font-weight: 900;
                font-size: 1.8rem;
                letter-spacing: 2px;
                text-shadow: 0 0 15px rgba(0,255,255,0.6);
                margin: 0;
            }

        .text-cyan {
            color: var(--cyan) !important;
        }

        .sidebar-link {
            display: flex;
            align-items: center;
            padding: 14px 25px;
            color: #ccc;
            text-decoration: none;
            transition: all 0.35s;
            border-left: 4px solid transparent;
            font-weight: 600;
        }

            .sidebar-link i {
                font-size: 1.4rem;
                margin-right: 15px;
                width: 30px;
            }

            .sidebar-link:hover, .sidebar-link.active {
                background: rgba(0,255,255,0.2);
                color: var(--cyan) !important;
                border-left: 4px solid var(--cyan);
                text-shadow: 0 0 12px rgba(0,255,255,0.7);
                transform: translateX(8px);
            }

        #content {
            margin-left: 280px;
            width: calc(100% - 280px);
            min-height: 100vh;
            transition: none;
        }

        .topbar {
            background: rgba(10,10,20,0.95);
            backdrop-filter: blur(10px);
            border-bottom: 1px solid rgba(0,255,255,0.2);
            padding: 1rem 1.5rem;
        }

        .sidebar-footer {
            position: absolute;
            bottom: 20px;
            width: 100%;
            text-align: center;
            opacity: 0.6;
            font-size: 0.9rem;
        }

        /* Responsive: en móvil el sidebar sigue visible (ocupa más espacio, pero no se oculta) */
        @@media (max-width: 992px) {
            #sidebar {
                min-width: 240px;
                max-width: 240px;
            }

            #content {
                margin-left: 240px;
                width: calc(100% - 240px);
            }
        }

        @@media (max-width: 576px) {
            #sidebar {
                min-width: 70px;
                max-width: 70px;
            }

                #sidebar .sidebar-header h3,
                #sidebar .sidebar-link span,
                #sidebar .sidebar-footer {
                    display: none;
                }

                #sidebar .sidebar-link i {
                    margin: 0 auto;
                    font-size: 1.6rem;
                }

                #sidebar .sidebar-link {
                    justify-content: center;
                    padding: 18px 0;
                }

            #content {
                margin-left: 70px;
                width: calc(100% - 70px);
            }
        }
    </style>
</head>

<body class="sb-dark-mode">

    @if (ViewData["OcultarMenu"] == null)
    {
        <div class="wrapper">

            <!-- Sidebar FIJO y PRO -->
            <nav id="sidebar">
                <div class="sidebar-header">
                    <h3>Proyecto Final Seguridad</h3>
                    
                </div>

                <ul class="list-unstyled components ps-0 mt-4">
                    <li>
                        <a href="@Url.Action("Index", "Home")" class="sidebar-link">
                            <i class="bi bi-house-door-fill"></i> <span>Inicio</span>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Encriptar", "Crypto")" class="sidebar-link">
                            <i class="bi bi-lock-fill"></i> <span>Encriptar</span>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Desencriptar", "Crypto")" class="sidebar-link">
                            <i class="bi bi-unlock-fill"></i> <span>Desencriptar</span>
                        </a>
                    </li>

                    <li class="mt-auto pt-5">
                        <div class="border-top border-secondary mx-4 my-4"></div>
                        <a href="@Url.Action("Logout", "Auth")" class="sidebar-link text-danger">
                            <i class="bi bi-box-arrow-right"></i> <span>Cerrar Sesión</span>
                        </a>
                    </li>
                </ul>

                <div class="sidebar-footer">
                    © 2025 Proyecto Final Seguridad
                </div>
            </nav>

            <!-- Contenido principal -->
            <div id="content">
                <nav class="topbar shadow-lg">
                    <div class="d-flex align-items-center justify-content-between">
                        <h4 class="mb-0 text-cyan fw-bold">
                            @ViewData["Title"]
                        </h4>
                        <!-- Aquí quitamos el nombre del usuario y el ícono -->
                    </div>
                </nav>

                <div class="container-fluid mt-4 px-4">
                    <main role="main">
                        @RenderBody()
                    </main>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="container-fluid mt-5">
            @RenderBody()
        </div>
    }

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>